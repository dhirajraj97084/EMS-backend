{
  "version": 2,
  "builds": [
    { 
      "src": "index.js", 
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["routes/**", "models/**", "middleware/**", "config.env"]
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "index.js" },
    { "src": "/(.*)", "dest": "index.js" }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
